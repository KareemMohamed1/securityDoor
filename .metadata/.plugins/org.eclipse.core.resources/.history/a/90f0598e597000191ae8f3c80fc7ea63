#include"uart.h"
#include"external_eeprom.h"

uint8 savedPass[100];
uint8 recievedPass[100];
uint8 size;
uint8 PassmatchFlag;
int main (void){
	uint8 i;
	EEPROM_init();
	UART_init();
	while(1){
		size = UART_reciveByte();
		UART_recieveArray(recievedPass,size);
		EEPROM_readArray(savedPass,size);
		while(i<size){
			if(recievedPass[i]!=savedPass){
				PassmatchFlag=0;
				UART_sendByte(PassmatchFlag);
				break;

			}
		}


	}
}
