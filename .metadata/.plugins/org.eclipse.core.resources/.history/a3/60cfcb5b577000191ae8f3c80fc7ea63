#include"uart.h"
#include"external_eeprom.h"
#define PASS_SIZE 4
uint8 savedPass[PASS_SIZE]={0,0,0,0};
uint8 recievedPass[PASS_SIZE];
uint8 size;
uint8 i;
int main (void){
	DDRB =0XFF;
	PORTB=0X00;
	uint8 i;
	EEPROM_init();
	UART_init();
	EEPROM_writeArray(0x0311,savedPass,PASS_SIZE);
	_delay_ms(500);
	EEPROM_readArray(0x0311,recievedPass,PASS_SIZE);
	while(1){
		for(i=0;i<PASS_SIZE;i++){
			if(recievedPass[i]==savedPass[i]){
				_delay_ms(500);
				PORTB= recievedPass[i];
				_delay_ms(500);
			}

		}
	}
}
