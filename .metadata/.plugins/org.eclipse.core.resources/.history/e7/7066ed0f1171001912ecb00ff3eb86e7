#include "timer1.h"
#include"avr/wdt.h"
extern uint8 timerCounter;
void TIMER1_init(){
	TCCR1A =(1<<FOC1A)|(1<<FOC1B);
	TCCR1B =(1<<CS12)|(1<<CS10);
	TCNT1L=0;
	TCNT1H=0;
	TIMSK = (1<<TOIE1);
}

ISR(TIMER1_OVF_vect){
	wdt_enable(1);
	while(1) {}
	if(timerCounter<2){
		timerCounter++;
	}
	else{
		timerCounter=0;
	}
}

